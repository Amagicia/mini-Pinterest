<!DOCTYPE html>
<html>
<head>
  <title>All Data</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen">
  <div class="p-6">
    <h1 class="text-3xl font-bold mb-6 text-center">Gallery</h1>

    <% if (items.length === 0) { %>
      <div class="w-full h-48 flex items-center justify-center bg-gray-700 text-gray-400 rounded-lg">
        No Data Available
      </div>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <% items.forEach(item => { %>
          <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
            <img src="<%= item.imageUrl %>" 
                 alt="<%= item.name %>" 
                 class="w-full h-64 object-contain bg-black">
            <div class="p-4">
              <h2 class="text-lg font-bold"><%= item.name %></h2>
              <p class="text-sm text-gray-400"><%= item.description %></p>
              <p class="text-xs text-gray-500 mt-2">Uploaded: <%= item.createdAt.toLocaleString() %></p>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
  <a href="/mainpage" 
class="bg-pink-500 hover:bg-pink-600 m-12 text-white font-semibold py-2 px-4 rounded transition">
 Upload Item
</a>
</body>
</html>

